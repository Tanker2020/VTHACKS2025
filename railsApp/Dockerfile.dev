# Dev-only image: everything needed to run Rails in development.
ARG RUBY_VERSION=3.4
FROM ruby:${RUBY_VERSION}-slim

ENV DEBIAN_FRONTEND=noninteractive \
    BUNDLE_PATH=/usr/local/bundle \
    BUNDLE_JOBS=4 \
    BUNDLE_RETRY=3 \
    RAILS_ENV=development

# Dev deps (sqlite3 for dev DB, build tools for native gems)
RUN apt-get update && apt-get install -y --no-install-recommends \
            build-essential git curl pkg-config sqlite3 libsqlite3-dev libyaml-dev \
        && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install gems (use host-mounted Gemfile for cache friendliness if you want)
COPY Gemfile Gemfile.lock ./
RUN bundle install

# Default: run rails dev server
CMD ["bash", "-lc", "bundle install && bin/rails db:prepare && bin/rails server -b 0.0.0.0 -p 3000"]